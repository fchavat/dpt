<p id="notice"><%= notice %>

<h1><%= t('.title_html') %></h1>
<p> You have visited the catalog <%= pluralize(@visit_count, 'time', 'times') %>
<% cache @products do %>
  <% @products.each do |product| %>
    <% cache product do %>
      <div class="entry">
        <%= (product.image_url) %> 
        <h3><%= product.title %></h3>
        <%= sanitize(product.description) %>
        <div class="price_line">
          <span class="price"><%= product.price %></span>
          <%= button_to t('.add_html'), line_items_path(product_id: product), locale: I18n.locale, remote: true %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>